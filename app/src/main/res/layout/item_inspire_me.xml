<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_padding"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background">

        <TextView
            android:id="@+id/im_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/standard_padding"
            android:text="@string/hyphen"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="New Delhi" />

        <TextView
            android:id="@+id/im_places"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/state_location_on_white"
            android:drawableStart="@drawable/state_location_on_white"
            android:padding="@dimen/small_padding"
            android:text="@string/places"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/im_flight_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/im_city_name"
            android:contentDescription="@string/flight"
            android:padding="@dimen/standard_padding"
            android:src="@drawable/state_flight_white" />

        <TextView
            android:id="@+id/im_dep_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/im_city_name"
            android:layout_toEndOf="@+id/im_flight_icon"
            android:layout_toRightOf="@+id/im_flight_icon"
            android:paddingTop="@dimen/standard_padding"
            android:text="@string/hyphen"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="BLR" />

        <TextView
            android:id="@+id/im_hyphen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/im_city_name"
            android:layout_toEndOf="@+id/im_dep_code"
            android:layout_toRightOf="@+id/im_dep_code"
            android:padding="@dimen/standard_padding"
            android:text="@string/hyphen"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/im_arr_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/im_city_name"
            android:layout_toEndOf="@+id/im_hyphen"
            android:layout_toRightOf="@+id/im_hyphen"
            android:paddingTop="@dimen/standard_padding"
            android:text="@string/hyphen"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="DEL" />

        <ImageView
            android:id="@+id/im_date_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/im_flight_icon"
            android:contentDescription="@string/date"
            android:padding="@dimen/standard_padding"
            android:src="@drawable/state_date_black" />

        <TextView
            android:id="@+id/im_dep_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/im_flight_icon"
            android:layout_toEndOf="@+id/im_date_icon"
            android:layout_toRightOf="@+id/im_date_icon"
            android:paddingTop="@dimen/standard_padding"
            android:text="@string/hyphen"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="22 Aug, 16" />

        <TextView
            android:id="@+id/im_date_hyphen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/im_flight_icon"
            android:layout_toEndOf="@+id/im_dep_date"
            android:layout_toRightOf="@+id/im_dep_date"
            android:padding="@dimen/standard_padding"
            android:text="@string/hyphen"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/im_arr_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/im_flight_icon"
            android:layout_toEndOf="@+id/im_date_hyphen"
            android:layout_toRightOf="@+id/im_date_hyphen"
            android:paddingTop="@dimen/standard_padding"
            android:text="@string/hyphen"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="22 Aug, 16" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/standard_padding"
            android:layout_marginRight="@dimen/standard_padding"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/im_currency_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/small_padding"
                android:paddingLeft="@dimen/small_padding"
                android:paddingStart="@dimen/small_padding"
                android:paddingTop="@dimen/large_padding"
                android:text="@string/hyphen"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                tools:text="INR" />

            <TextView
                android:id="@+id/im_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/im_currency_code"
                android:layout_toRightOf="@+id/im_currency_code"
                android:paddingLeft="@dimen/small_padding"
                android:paddingRight="@dimen/small_padding"
                android:paddingTop="@dimen/standard_padding"
                android:text="@string/hyphen"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="450" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>