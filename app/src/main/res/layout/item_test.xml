<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:layout_marginLeft="@dimen/small_padding"
    android:layout_marginRight="@dimen/small_padding"
    app:cardCornerRadius="15dp"
    android:layout_height="180dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/city_layout"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:background="@drawable/image_g">

        <TextView
            android:id="@+id/city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="BANGALORE"
            android:paddingTop="@dimen/large_padding"
            android:paddingLeft="@dimen/small_padding"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/top_dest_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/details"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            android:clickable="true"
            android:padding="@dimen/standard_padding"
            android:layout_margin="@dimen/standard_padding"
            android:background="@drawable/rounded_corner"/>
    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/flight_container"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/city_layout"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/large_padding"
            android:background="@drawable/round_button">

            <ImageView
                android:id="@+id/flight_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="@dimen/semi_large_padding"
                android:src="@drawable/white_flight" />

            <TextView
                android:layout_below="@+id/flight_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_padding"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:text="46500"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pax_container"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/flight_container"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/large_padding"
            android:background="@drawable/round_btn_dark">

            <ImageView
                android:id="@+id/pax_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="@dimen/semi_large_padding"
                android:src="@drawable/person_white" />

            <TextView
                android:layout_below="@+id/pax_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_padding"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:text="100230"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>