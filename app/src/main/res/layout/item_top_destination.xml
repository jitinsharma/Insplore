<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/standard_padding"
    android:layout_marginRight="@dimen/standard_padding"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/top_section"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/comic_city">

            <TextView
                android:id="@+id/top_dest_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/standard_padding"
                android:textStyle="bold"
                android:textSize="25sp"
                android:fontFamily="sans-serif-light"
                android:textColor="@android:color/white"
                android:text="@string/hyphen"
                tools:text="Bangalore"/>

            <TextView
                android:id="@+id/top_dest_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top_dest_city"
                android:layout_centerHorizontal="true"
                android:text="@string/places"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium"
                android:clickable="true"
                android:drawableLeft="@drawable/state_location_on_white"
                android:drawableStart="@drawable/state_location_on_white"
                android:padding="@dimen/standard_padding"
                android:layout_margin="@dimen/standard_padding"
                android:background="@drawable/rounded_corner"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/top_dest_bottom_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_below="@+id/top_section">

            <TextView
                android:id="@+id/top_dest_flights"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hyphen"
                tools:text="64259"
                android:textStyle="bold"
                android:drawableLeft="@drawable/state_flight_accent"
                android:drawableStart="@drawable/state_flight_accent"
                android:padding="@dimen/standard_padding"
                android:drawablePadding="@dimen/standard_padding"/>

            <TextView
                android:id="@+id/top_dest_passengers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hyphen"
                tools:text="4259"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/top_dest_flights"
                android:layout_toEndOf="@+id/top_dest_flights"
                android:drawableLeft="@drawable/state_person_accent"
                android:drawableStart="@drawable/state_person_accent"
                android:padding="@dimen/standard_padding"
                android:drawablePadding="@dimen/standard_padding"/>
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>
